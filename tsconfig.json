{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
